@page
@model RegisterModel
@{
    ViewData["Title"] =Localizer[ "Register"];
}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>@Localizer["Create a new account"]</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" placeholder="@Localizer["Type your email here"]"/>
                <span asp-validation-for="Input.Email" data-interval="5000" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" placeholder="@Localizer["Type your password here"]"/>
                <span asp-validation-for="Input.Password" data-interval="5000"  class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="@Localizer["Type your password again"]"/>
                <span asp-validation-for="Input.ConfirmPassword" data-interval="5000"  class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">@Localizer[ "Register"]</button>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
