@model IEnumerable<POYA.Areas.XAd.Models.XAdCustomer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col col-12">
        <p>
            <a class="Become-advertiser float-right">@Localizer["Become our advertiser"]</a>
        </p>

        <div class="text-center our-advertisers">@Localizer["Our advertisers"]</div>
        <hr />
        <div class="col col-auto">
            @foreach(var m in Model)
            {

            }
        </div>
    </div>
</div>

@section Scripts{
    <script>
    $(document).on("click", ".Become-advertiser", function () {
        window.location = "@(Url.Action("Create"))";
    });
    </script>
}

@section Styles{
    <style>
        .our-advertisers{
            font-size:18px;
            font-weight:600;
            color:tomato;
            cursor:pointer;
        }
        .Become-advertiser {
            font-weight: 500;
            font-size: 25px;
            cursor: pointer;
            animation: BecomeAdvertiser 5s linear infinite alternate;
        }
            .Become-advertiser:hover {
                color: rgb(64, 67, 212);
                animation: BecomeAdvertiserHover 0.22s linear infinite alternate;
            }

        @@keyframes BecomeAdvertiser {
            0%{
                color: rgb(242, 89, 11);
            }
            100% {
                color: rgb(64, 67, 212);
            }
        }
        
        @@keyframes BecomeAdvertiserHover {
            0%{
                color: rgb(242, 89, 11);
            }
            
            100% {
                color: rgb(242, 89, 11);
            transform:scale(1.05);
            }
        }
    </style>
}




