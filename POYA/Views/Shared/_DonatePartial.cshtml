<style>
    #DonateEle {
        position: fixed;
        bottom: 42px;
        right: 1px;
        width: 45px;
        height: 45px;
        cursor:pointer;
    }

        #DonateEle > img {
            width: inherit;
            height: inherit;
        }

            #DonateEle > img:hover {
                animation: DonateImgHover 0.2s linear 1 forwards;
            }

    @@keyframes DonateImgRotation {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    @@keyframes DonateImgHover {
        0% {
            box-shadow: 0px 0px 0px 0px #ff00dc;
        }

        100% {
            box-shadow: 0px 0px 0px 6px #ff00dc;
            transform:scale(1.2);
        }
    }
</style>

<div id="DonateEle" title='@Localizer["Donate"]'>
    <img src='~/img/Donate.webp' class="rounded-circle" />
</div>
<script>
    document.querySelector("#DonateEle").onclick = function () {
        location.href = "@Url.Action("Donate","Home")";
    }
</script>